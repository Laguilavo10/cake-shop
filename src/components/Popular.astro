---
import type { Entry, EntrySkeletonType } from 'contentful'
import Card from './Card.astro'
import Decorator from './Decorator.astro'
import Section from './Section.astro'
import CardsCakes from './CardsCakes.astro'
const array = Array(3).fill(null)
interface Props {
  cakes?: Entry<EntrySkeletonType, undefined, string>[]
}
const { cakes } = Astro.props
---

<Section title='Popular' textUnderline='ahora' id='popular'>
  <ul
    class='relative flex flex-wrap justify-center gap-20 lg:grid lg:grid-cols-3'
  >
    <CardsCakes cakes={cakes} countToShow={3} />
    <div
      class='absolute bottom-20 top-24 -z-10 w-full justify-self-center rounded-3xl bg-secondary lg:h-4/5 lg:w-[105%] xl:w-[110%]'
    >
    </div>
  </ul>
</Section>
