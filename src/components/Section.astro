---
import Decorator from './Decorator.astro'

interface Props {
  id: string | null | undefined
  title: string
  textUnderline: string
  customClass?: string
}
const { textUnderline, title, id } = Astro.props
---

<section class='mb-24 m-auto max-w-6xl px-4 py-16' id={id} >
  <h3 class='text-2xl font-bold mb-12'>
    {title} <Decorator>{textUnderline}</Decorator>
  </h3>
  <slot />
</section>
